# @configure_input@

ARCH = unix
POLL = poll

LIBS = $(LFLAGS) @LIBS@

CAMP = camperror path drawpath drawlabel picture psfile texfile util settings \
       guide knotlist pathlist drawfill
FILES = $(CAMP) cast env genv main runtime stm dec errormsg inst name symbol \
	types entry exp newexp stack camp.tab lex.yy import access \
	absyn record pool interact fileio builtin fftw++ simpson
CLEAN = camp.tab.h camp.tab.cc lex.yy.cc camp.output
NAME = asy
XNAME = x$(NAME)

CXX = @CXX@ -Wall -ansi
MAKEDEPEND = $(CXX) $(OPT) -M -DDEPEND
YACC = @YACC@
LEX = @LEX@

DEFS = @DEFS@
OPT = -g -O3 -DNDEBUG $(DEFS) $(CFLAGS)
INCL = -I. -I-

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
asydir = @asydir@
INSTALL = @INSTALL@

ASYMPTOTE_DIR = ../base
export ASYMPTOTE_DIR

asy: 	parser depend
	$(MAKE) -f Compile files

all:  	asy man

man:	asy
	cd doc; rm -f latexusage.asy && ../asy -f jpg *.asy && \
	latex latexusage && ../asy *.asy && latex latexusage && \
	dvips -o latexusage.eps latexusage && \
	convert latexusage.eps latexusage.jpg && \
	makeinfo asymptote && makeinfo --html asymptote && \
	cp *.jpg asymptote && texi2dvi asymptote.texi 
	
depend: $(FILES:=.d)

parser: camp.tab.cc camp.tab.h lex.yy.cc

camp.tab.h: camp.tab.cc

camp.tab.cc: camp.y
	$(YACC) -dvt -b camp camp.y
	mv camp.tab.c camp.tab.cc

lex.yy.cc: camp.l
	$(LEX) -d -olex.yy.cc camp.l

lex.yy.d: lex.yy.cc camp.tab.h

install: asy
	${INSTALL} -d $(bindir) $(asydir) $(asydir)/examples
	${INSTALL} -s $(NAME) $(bindir)
	${INSTALL} $(XNAME) $(bindir)
	${INSTALL} base/* $(asydir)
	${INSTALL} examples/*.asy $(asydir)/examples

install-man:
	${INSTALL} doc/asymptote.info $(prefix)/info
	install-info doc/asymptote.info $(prefix)/info/dir

uninstall: 
	-cd $(asydir)/examples; rm -f *.asy
	-rmdir $(asydir)/examples
	-cd $(asydir); rm -f *
	-rmdir $(asydir)
	-rm -f $(bindir)/$(NAME) $(bindir)/$(XNAME) 
	-install-info --delete doc/asymptote.info $(prefix)/info/dir
	-rm $(prefix)/info/asymptote.info


clean:  FORCE
	rm -f asy *.o *.d *mon.out $(CLEAN)

distclean: FORCE clean
	rm -f Makefile config.h config.log config.status
	cd doc; rm -rf *.eps *.jpg latexusage.{asy,dvi,log,aux,ps} asymptote \
		asymptote.{aux,cp,cps,dvi,fn,info,ky,log,pg,toc,tp,vr}

maintainer-clean: FORCE distclean
	rm -f configure config.h.in 
	rm -rf autom4te.cache

test:   asy FORCE
	./wce

.SUFFIXES: .c .cc .o .d
.cc.o:
	$(CXX) $(OPT) $(INCL) -o $@ -c $<
.cc.d:
	$(MAKEDEPEND) $(INCL) $(MDOPTS) $< > $@

FORCE:

configure: configure.ac
	autoheader && autoconf

Makefile: Makefile.in config.status
	./config.status

config.status: configure
	./config.status --recheck

